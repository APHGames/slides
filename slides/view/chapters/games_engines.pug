include ../mixins/containers.pug
include ../mixins/containers_aph.pug

- var imgAssets = '../assets/games_engines/';
- var defaultBgr = 'backgrounds/bgr_wolfenstein.jpg';

// ===================================================== SLIDES =====================================================
+mchapter('Rise of game engines', imgAssets+'chapter_engines.svg')
+frameInbox('Pre-engine era')
	.center.fill
		.grid.grid-cols-3.grid-rows-2.gap-40.width-80p
			+floppyApp(imgAssets+'engine_pinball.jpg', 'Pinball Construction Kit', '1983')
			+floppyApp(imgAssets+'engine_tforce.jpg', 'Thunder Force Construction', '1984')
			+floppyApp(imgAssets+'engine_adventure.jpg', 'Adventure Construction Kit', '1984')
			+floppyApp(imgAssets+'engine_gamemaker.jpg', 'Garry Kitchen\'s GameMaker', '1988')
			+floppyApp(imgAssets+'engine_arcade.jpg', 'Arcade Construction Kit', '1988')
			+floppyApp(imgAssets+'engine_rpgmaker.jpg', 'RPG Maker', '1990')
+frameInbox('1989: Prince of Persia')
	.flex-cols-2
		div
			p Guard controller
			.code.tiny.font-dos
				include ../../assets/games_engines/snippets_generated/prince_of_persia.html
		div
			img.height-500(src=imgAssets+'prince.jpg')
			p Source code for Apple II: <a href="https://github.com/jmechner/Prince-of-Persia-Apple-II">link</a>
+frameInbox('1993: Vlak')
	div
		.code.tiny.font-dos.text-xs
			include ../../assets/games_engines/snippets_generated/vlak.html
		.top-100.right-20
			img.height-420(src=imgAssets+'vlak.png')
			p.mt-10 Source code for MS-DOS: <a href="https://github.com/oldcompcz/vlak">link</a>

+frameInbox('ID Tech')
	div.important-orange
		ul
			li.fragment Family of game engines developed by <span class="highlight">ID Software</span>
			li.fragment <span class="highlight">Id Tech 0</span> - the very first game engine
			li.fragment Every next game had more advanced technology
			li.fragment Still, memory constraints sabotaged attempts to create data-heavy design
		.flex-cols-4.mt-80
			+floppyApp(imgAssets+'idtech_hovertank.jpg', 'Hovertank 3-D', '1991').fragment
			+floppyApp(imgAssets+'idtech_catacomb.jpg', 'Catacomb 3-D', '1991').fragment
			+floppyApp(imgAssets+'idtech_wolfenstein.jpg', 'Wolfenstein 3-D', '1992').fragment
			+floppyApp(imgAssets+'idtech_doom.jpg', 'Doom', '1993').fragment
+frameInbox('1993: Doom')
	.flex-cols-2
		.code.tiny.text-xs
			include ../../assets/games_engines/snippets_generated/doom.html 
		div
			img.height-550(src=imgAssets+'doom.jpg')
			p Source code: <a href"https://github.com/id-Software/DOOM/tree/master/linuxdoom-1.10">link</a>
+frameInbox('1996: Quake')
	div
		.flex-cols-2
			.code.tiny.text-xs
				include ../../assets/games_engines/snippets_generated/quake.html 
			div
				img.height-550(src=imgAssets+'quake.jpg')
				p Source code: <a href="https://github.com/id-Software/Quake">link</a>
+frameInbox('Quake Engine')
	div.important-orange
		div
			ul
				li.fragment ~id Tech 1
				li.fragment Released by ID Software in 1996
				li.fragment True 3D real-time rendering
				li.fragment Binary space partitioning
				li.fragment 3D light sources, Gouraud shading
				li.fragment Games released: <span class="highlight">Quake, Hexen 2, Silver Wings</span>
				li.fragment Source code released in 1999
				li.fragment <span class="highlight">Successors:</span>
					ul
						li.fragment id Tech 2, 3, 4, 5, 6, 7 (2020)

		div.bottom-0.right-0
			img.height-550(src=imgAssets+'idtech_5.jpg')
+frameInbox('Quake engine family')
	.center
		img.height-750(src=imgAssets+'idtech_family.svg')
+frameInbox('Influence of Game Engines')
	div.nopadding.fill.center.absolute
		img.height-900(src=imgAssets+'games_evolution.svg')
	div.nopadding.fill.center.absolute.top-50
		img.height-700(src=imgAssets+'games_evolution.png')
