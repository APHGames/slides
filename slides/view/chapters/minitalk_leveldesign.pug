- var imgAssets = '../assets/minitalk_leveldesign/';
- var defaultBgr = 'backgrounds/levels.jpg';

// ===================================================== SLIDES =====================================================
+titleLecture('Level Design', 'Minitalk', imgAssets+'chapter_leveldesign.svg')
+frameInbox('Level Design')
	div
		ul
			li.fragment deals with creating respective stages of the game
			li.fragment unlike environment design, it doesn't focus primarily on scenery composition, but on incorporation of player's capabilities, game mechanics, space, and game elements
			li.fragment level design should <span class="highlight">showcase</span> the mechanics and provide the player with an enjoyable experience
			li.mt-80.fragment <span class="highlight">Responsibilities</span>
				ul
					li.fragment laying out map features - buildings, hills, rooms,...
					li.fragment placing resources - equipment, weapons, medkits
					li.fragment utilizing surprise elements, ambushes,...
					li.fragment specifying nonstatic parts - doors, teleporters
					li.fragment creating scripted events triggered by player's actions
			.bottom-50.right-20
				img.height-400(src=imgAssets+'level_editor.jpg')
+frameInbox('Level Design Elements')
	div
		ul
			li.fragment <span class="highlight">Spawners</span> - emitters of new objects/mobs (e.g. monster spawners in Doom)
			li.fragment <span class="highlight">Triggers</span> - events that occur after the player has performed a certain action (e.g. entering the door)
			li.fragment <span class="highlight">Resource placement</span> - careful placement of resources the player may use, so that their location will serve their purpose properly
			li.fragment <span class="highlight">Window</span> - a place visible from player's position, but not directly reachable
			li.fragment <span class="highlight">Weenie</span> - a large architectural object visible from many locations, can be used as a reference point
			li.fragment <span class="highlight">Landmark</span> - easily-recognizable structure for better navigation
			li.fragment <span class="highlight">Progression obstacle</span> - an obstacle that prevents the player from going further until the story advances
				.center.flex-col.mt-10
					div.flex-row
						figure.mx-10
							img.height-270(src=imgAssets+'blocker_01.png')
							p Pokémon Ruby
						figure.mx-10
							img.height-270(src=imgAssets+'blocker_02.jpg')
							p GTA III
						figure.mx-10
							img.height-270(src=imgAssets+'blocker_03.jpg')
							p Dreamfall Chapters
+frameInbox('Example: Window and Weenie')
	div
		ul
			li Window
		.center.flex-col
			div.flex-row
				figure.mx-10.fragment
					img.height-310(src=imgAssets+'window_01.png')
					p Prince of Persia
				figure.mx-10.fragment
