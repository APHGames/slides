include ../mixins/containers.pug
include ../mixins/containers_aph.pug

- var imgAssets = '../assets/design_development/';

- var defaultBgr = 'backgrounds/dev.jpg';
+mchapter('Game Development', imgAssets+'chapter_dev.svg')
+frameInbox('Games made by one person')
    div
        .grid-rows-2.grid-cols-4.grid.gap-10.width-90p.ml-100.mt-40
            .fragment
                +gbGameMid(imgAssets+'singledev_tetris.jpg', 'Tetris')
            .fragment
                +gbGameMid(imgAssets+'singledev_cavestory.jpg', 'Cave Story')
            .fragment
                +gbGameMid(imgAssets+'singledev_braid.jpg', 'Braid')
            .fragment
               +gbGameMid(imgAssets+'singledev_minecraft.jpg', 'Minecraft')
            .fragment
                +gbGameMid(imgAssets+'singledev_dust.jpg', 'Dust: An Elysian Tale')
            .fragment
                +gbGameMid(imgAssets+'singledev_flappy.jpg', 'FlappyBird')
            .fragment
                +gbGameMid(imgAssets+'singledev_undertale.jpg', 'Undertale')
            .fragment
                +gbGameMid(imgAssets+'singledev_axiom.jpg', 'Axiom Verge')

+frameInbox('Game industry failures')
    div
        .space-lg.mt-80
        .grid-rows-1.grid-cols-4.grid.gap-10.width-90p.mt-60.ml-80
            .fragment
                +gbGameMid(imgAssets+'failure_daikatana.jpg', 'Daikatana')
            .fragment
                +gbGameMid(imgAssets+'failure_spore.jpg', 'Spore')
            .fragment
                +gbGameMid(imgAssets+'failure_duke.jpg', 'Duke Nukem Forever')
            .fragment
                +gbGameMid(imgAssets+'failure_simcity.jpg', 'Simcity 2013')