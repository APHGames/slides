- var imgAssets = '../assets/minitalk_adventures/';
- var defaultBgr = 'backgrounds/adventures.jpg';

// ===================================================== SLIDES =====================================================
+titleLecture('Adventure Games', imgAssets+'chapter_adventures.svg')
+frameInbox('Adventures')
	div
		ul
			li.fragment <span class="highlight">adventure game</span> - a game where the player takes part in a world driven by exploration, story-telling, and puzzle-solving
			li.fragment peaked popularity during 1980s to mid-1990s, as being some of the most technically advanced games
			li.fragment <span class="highlight">adventure game</span> - text adventures, P&C adventures, interactive movies, narrative-based games
			li.fragment since 2000, adventure aspects are spilling over into other genres 
			li.fragment <span class="highlight">common features</span>
				.bottom-20.right-20
					figure
						img.height-450(src=imgAssets+'intergame_kyrandia.jpg')
						p Legend of Kyrandia (1993)
				ul
					li.fragment event-based progressive gameplay
					li.fragment limited interaction (search, put, open, talk)
					li.fragment dialogue and conversation trees
					li.fragment puzzle-solving
					li.fragment gathering and using items
					li.fragment modest budget
+mcontainer
	+frameShard().top-20p.fragment
		+quote('Adventures are just too art intensive, and art is expensive to produce and to show.', 'Lori Ann').text-xl
