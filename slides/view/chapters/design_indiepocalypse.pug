			a(href='https://www.gamasutra.com/blogs/AlvaMajo/20160801/278241/My_first_indie_game_failed_hard_Heres_the_data.php')
				img.width-500(src=imgAssets+'article_first_game.jpg')
		.bottom-10.right-20
			a(href='https://siliconangle.com/2013/08/29/the-dark-side-of-failed-indie-game-developers/')
				img.width-500(src=imgAssets+'article_failed_dev.jpg')
