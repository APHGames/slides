						tr
							td.text-center 13
							td 19.12.2023
							td Rezerva
			+mcontainer()
				h3 Žárovičky ve slidech
				.center
					.flex-cols-3.width-80p.top-20p
						div.text-center.p-20
							img.opacity-4.height-350(src='../themes/aph/resources/bulb_green_4x.png' alt='green bulb')
							p.color-emerald.font-bold.text-xl Zelená
							p Něco, co stojí za pozornost
						div.text-center.p-20
							img.opacity-7.height-350(src='../themes/aph/resources/bulb_orange_4x.png' alt='orange bulb')
							p.color-manhattan.font-bold.text-xl Oranžová
							p Něco, byste měli vědět
						div.text-center.p-20
							img.height-350(src='../themes/aph/resources/bulb_red_4x.png' alt='red bulb')
							p.color-tomato.font-bold.text-xl Červená
							p Něco, co <span class="font-bold">musíte</span> vědět
			+mcontainer
				h3 GDS pozvánka
				.center
					img.height-850(src=imgAssets+'GDS.png')
			+mcontainer
				h3 Literatura
				.center
					img.height-850(src=imgAssets+'literature.png' alt='NI-APH literature')
			+mcontainer('Literatura')
				+frameShard().top-200
					div
						.scope
							p Pro vývoj
							ul
								li
									a(href='https://www.amazon.co.uk/Engine-Architecture-Third-Jason-Gregory/dp/1138035459') Gregory, Json. 2018. Game Engine Architecture (3rd ed.)
						.scope
							p Pro design
							ul
								li 
									a(href='https://www.amazon.com/Art-Game-Design-Lenses-Third/dp/1138632090') Schell, Jesse. 2004. The Art of Game Design: A Book of Lenses (3rd ed.)
					

	+footer('Adam Vesecký (FIT ČVUT)', 'Architektura Počítačových Her')
