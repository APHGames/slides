						tr
							td.text-center 12
							td 12.12.2023
							td Multiplayer
						tr
							td.text-center 13
							td 19.12.2023
							td Design
				+tipKeen3("A občas bude i nějaký ten minitalk").bottom-0
			+frameInboxMid('Laborky')
				div.center
					table.width-90p.text-left
						tr
							th Týden
							th Datum
							th Obsah
						tr
							td.text-center 01
							td 26.9.2023
							td Úvod a seznámení s prostředím
						tr
							td.text-center 02
							td 3.10.2023
							td Úvod a seznámení s prostředím
						tr
							td.text-center 03
							td 10.10.2023
							td Technický návrh mechanik
						tr
							td.text-center 04
							td 17.10.2023
							td Technický návrh mechanik
