// GROUP=Hlavní
// CATEGORY=Hlavní
// COURSE=APH
// NAME=Organizační informace
// LOCALE=cs
doctype html
include ./mixins/header.pug
include ./mixins/containers.pug
include ./mixins/containers_aph.pug
include ./mixins/title.pug
include ./mixins/quotes.pug

- var themePath = '../themes/aph/';
- var assets = '../assets/';
- var globalAssets = assets +'all/';
- var imgAssets = assets + 'organization/';
- var defaultBgr = 'backgrounds/minecraft_blocks.png';

html(lang='cs')
	+header('Organizace předmětu', 'Adam Vesecký', themePath + 'resources/favicon.png', themePath + 'theme_aph.scss')

	// ===================================================== SLIDES =====================================================
	.reveal
		.slides
			// ============================================================
			+titleCommonCs('Organizace předmětu')
			// ============================================================
			+mchapter('Co nás čeká', imgAssets+'chapter_organization.svg')
			+mcontainer
				h3 (De)motivační citáty
				+frameShard().top-5p.width-78p.left-12p.fragment.fade-up
					+quote('Nobody in this industry knows what they are doing. We just have a gut assumption.', 'Cliff Bleszinski').text-xl
				+frameShard().top-10p.width-78p.left-12p.fragment.fade-up
					+quote('Focus is a matter of deciding what things you\'re not going to do.', 'John Carmack').text-xl
				+frameShard().top-15p.width-78p.left-12p.fragment.fade-up
					+quote('Games are great to work on because they are as much about art as they are science.', 'Mike McShaffry').text-xl
			+frameInboxMid('Jaké jsou cíle předmětu')
				.absolute.center.fill
					img.height-550.opacity-2(src=imgAssets+'gate.png' alt='decoration')
				ul.spacing-xl
					li.fragment.fade-up Umět odlišit herní koncepty od konceptů softwarových aplikací
					li.fragment.fade-up Porozumět, jak fungují herní enginy
					li.fragment.fade-up Porozumět modulární architektuře používané při vývoji her
					li.fragment.fade-up Porozumět základům matematických a fyzikálních aspektů ve hrách
					li.fragment.fade-up Porozumět základům herního AI
					li.fragment.fade-up Porozumět technickým principům multiplayeru
					li.fragment.fade-up Navrhnout a naprogramovat si jednoduchou hru z perspektivy vývojáře
			+frameInbox('Historie APHček')
				.flex-cols-2
					div.spacing-3xs
						.scope.fragment.fade-in(data-fragment-index="1")
							p 2017
							ul
								li první běh (děs a běs)
								li OpenFrameworks engine, C++
								li bez semestrálek, pouze domácí úkoly
								li 47 studentů, 25 kurz dokončilo
								li Průměrný prospěch: 1.48</span>
						.scope.fragment.fade-in.mt-100(data-fragment-index="2")
							p 2018
							ul
								li vylepšený design a nová doprovodná videa
								li migrace z C++ na TypeScript (PixiJS)
								li 50 studentů, 30 kurz dokončilo
								li Průměrný prospěch: 1.50</span>
					div
						.text-center.fragment.fade-in(data-fragment-index="1")
							img.width-600(src=imgAssets+'aph_01.jpg' alt='MI-APH 2017')
						.text-center.fragment.fade-in(data-fragment-index="2")
							img.width-600.mt-30(src=imgAssets+'aph_02.jpg' alt='MI-APH 2018')
			+frameInbox('Historie APHček')
				.flex-cols-2
					div.spacing-xs
						.scope.fragment.fade-in
							p 2019
							ul
								li Slidy plně v HTML
								li 50 studentů, 33 kurz dokončilo
								li Průměrný prospěch: <span clas="highlight">1.67</span>
						.scope.fragment.fade-in.mt-30
							p 2020
							ul
								li web, trailer, minitalky, nové přednášky
								li 50 studentů, 38 kurz dokončilo
								li Průměrný prospěch: <span clas="highlight">1.61</span>
						.scope.fragment.fade-in.mt-30
							p 2021
							ul
								li minoritní update
								li 50 studentů, 26 kurz dokončilo
								li Průměrný prospěch: <span clas="highlight">1.27</span>
						+tipKeen2("A v roce 2022 probíhala revitalizace").bottom-0
					div
						.text-center.fragment.fade-in(data-fragment-index="1")
							img.width-650(src=imgAssets+'aph_03.jpg' alt='MI-APH 2019')
						.text-center.fragment.fade-in(data-fragment-index="2")
							img.width-650.mt-20(src=imgAssets+'aph_04.jpg' alt='NI-APH 2020')
			+frameInbox('A jak to bude dál')
				.center.mt-30.fragment
					img.height-760(src=imgAssets+'dph.jpg')
			- defaultBgr = 'backgrounds/bgr_microchip.jpg';
			+mcontainer()
				h3 Odkazy
				.top-5p.left-40p
					img.height-300(src=themePath+'resources/keen2.png' alt='decoration')
				.center.top-35p.z-index-100.width-100p
					+frameShard().width-50p
						div.spacing-2xs
							.scope
								.highlight.font-bold Slidy a materiály
								ul
									li
										a(href="https://aphgames.cz") https://aphgames.cz
							.scope
								.highlight.font-bold Youtube kanál
								ul
									li 
										a(href="https://www.youtube.com/channel/UC1PTa9NCygXV_0IgOBRMw-Q") APHGames
							.scope
								.highlight.font-bold Github
								ul
									li 
										a(href="https://github.com/APHGames") https://github.com/APHGames
							.scope
								.highlight.font-bold Přednášky a laborky
								ul
									li Úterý, 16:15, TH-A:1455
			+mcontainer()
				h3 Bodování
				.top-0p.left-40p
					img.height-300(src=themePath+'resources/keen.png' alt='decoration')
				.center.top-20p.z-index-100.width-100p
					+frameShard().width-55p
						div.spacing-2xs
							.scope.fragment
								p Semestrálka
								ul
									li <span class="highlight-2">60</span> bodů, nutno splnit alespoň <span class="highlight-2">30</span>
							.scope.fragment
								p Zkouška
								ul
									li neformální diskuse nad různými tématy z přednášek
									li <span class="highlight-2">30</span> bodů, nutné minimum <span class="highlight-2">15</span>
							.scope.fragment
								p Minitest
								ul
									li na poslední přednášce
									li <span class="highlight-2">10</span> bodů, není minimum
							.scope.fragment
								p Nepovinné a bonusové body
								ul
									li kvíz - <span class="highlight-2">~10</span> bodů (2 body za první 3 místa, jinak 1 bod)
									li technický článek pro blog - <span class="highlight-2">10</span> bodů
									li semestrálka běžící na ggBlasteru - <span class="highlight-2">10</span> bodů
						+tipKeen3("A kdo bude mít 95+ bodů, dostane APH tričko").bottom-0
			- defaultBgr = 'backgrounds/bgr_gradient.jpg'
			+mcontainer()
				h3 Časová osa
				.top-40p.left-6p
					img.height-340(src=imgAssets+'timeline_cs.svg')
			+frameInboxMid('Přednášky')
				div.center
					table.width-70p.text-left
						tr
							th Týden
							th Datum
							th Obsah
						tr
							td.text-center 01
