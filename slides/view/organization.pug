doctype html
include ./mixins/header.pug
include ./mixins/containers.pug
include ./mixins/containers_aph.pug
include ./mixins/title.pug
include ./mixins/quotes.pug

- var themePath = '../themes/aph/';
- var assets = '../assets/';
- var globalAssets = assets +'all/';
- var imgAssets = assets + 'organization/';
- var defaultBgr = 'backgrounds/bgr_arcades2.jpg';

html(lang='en')
	+header('Organization', 'Adam Vesecký', themePath + 'resources/favicon.png', themePath + 'theme_aph.scss')

	// ===================================================== SLIDES =====================================================
	.reveal
		.slides
			// ============================================================
			+titleCommon('Course Organization')
			// ============================================================
			+mchapter('Organization of the course', imgAssets+'chapter_organization.svg')
			+mcontainer
				h3 Motivational Quotes
				+frameShard().top-5p.width-78p.left-12p.fragment.fade-up
					+quote('Nobody in this industry knows what they are doing. We just have a gut assumption.', 'Cliff Bleszinski').text-xl
				+frameShard().top-10p.width-78p.left-12p.fragment.fade-up
					+quote('Focus is a matter of deciding what things you\'re not going to do.', 'John Carmack').text-xl
				+frameShard().top-15p.width-78p.left-12p.fragment.fade-up
					+quote('Games are great to work on because they are as much about art as they are science.', 'Mike McShaffry').text-xl
			+frameInboxMid('The purpose of this course')
				.absolute.center.fill
					img.height-550.opacity-2(src=imgAssets+'gate.png' alt='decoration')
				ul.spacing-xl
					li.fragment.fade-up To understand the difference between games and software applications
					li.fragment.fade-up To understand the architecture of game engines
					li.fragment.fade-up To understand the aspects of component architecture
					li.fragment.fade-up To understand the basics of math and physics used in games
					li.fragment.fade-up To understand the basics of gaming AI
					li.fragment.fade-up To understand the building blocks of multiplayer
					li.fragment.fade-up To understand the pitfalls and perils of game industry
			+frameInbox('History of APH')
				.flex-cols-2
					div.spacing-3xs
						.scope.fragment.fade-in(data-fragment-index="1")
							p 2017
							ul
								li the first run
								li OpenFrameworks engine, C++
								li no semestral projects, just 4 homeworks
								li 47 students, 25 finished the course
								li Average score: 1.48</span>
						.scope.fragment.fade-in.mt-100(data-fragment-index="2")
							p 2018
							ul
								li design improvements
								li new videos
								li migrated from C++ to TypeScript (PixiJS)
								li 50 students, 30 finished the course
								li Average score: 1.50</span>
					div
						.text-center.fragment.fade-in(data-fragment-index="1")
							img.width-600(src=imgAssets+'aph_01.jpg' alt='MI-APH 2017')
						.text-center.fragment.fade-in(data-fragment-index="2")
							img.width-600.mt-30(src=imgAssets+'aph_02.jpg' alt='MI-APH 2018')
			+frameInbox('History of APH')
				.flex-cols-2
					div.spacing-xs
						.scope.fragment.fade-in(data-fragment-index="1")
							p 2019
							ul
								li HTML presentation engine
								li 23 new examples, 3 minigames, 3 new topics
								li 50 students, 33 finished the course
								li Average score: <span clas="highlight">1.67</span>
						.scope.fragment.fade-in.mt-30(data-fragment-index="2")
							p 2020
							ul
								li new brand identity
								li new examples and lectures
								li 9 minitalks
								li intro video
								li 50 students, 38 finished the course
								li Average score: <span clas="highlight">1.61</span>
					div
						.text-center.fragment.fade-in(data-fragment-index="1")
							img.width-650(src=imgAssets+'aph_03.jpg' alt='MI-APH 2019')
						.text-center.fragment.fade-in(data-fragment-index="2")
							img.width-650.mt-20(src=imgAssets+'aph_04.jpg' alt='NI-APH 2020')

			- defaultBgr = 'backgrounds/bgr_microchip.jpg';
			+frameInboxMid('NI-APH 2021')
				div
					ul
						li.fragment new examples and minigames
						li.fragment new opening video
						li.fragment gallery and extras (WIP)
						li.fragment less is more
						li.fragment.fade-up
							span.highlight changes based on the feedback from the last survey
							ul
								li.fragment.fade-up more tutorials about the tech stack <span class="highlight-2">✔</span>
								li.fragment.fade-up more minitalks <span class="highlight-2">✔</span>
								li.fragment.fade-up less of technical content <span class="highlight-2">✔</span>

			- defaultBgr = 'backgrounds/bgr_arcades2.jpg'
			+mcontainer()
				h3 Organization
				.top-5p.left-40p
					img.height-300(src=themePath+'resources/keen2.png' alt='decoration')
				.center.top-35p.z-index-100.width-100p
					+frameShard().width-50p
						div.spacing-2xs
							.scope
								.highlight.font-bold Slides and materials
								ul
									li
										a(href="https://aphgames.io") https://aphgames.io
							.scope
								.highlight.font-bold Youtube channel
								ul
									li 
										a(href="https://www.youtube.com/channel/UC1PTa9NCygXV_0IgOBRMw-Q") APHGames
							.scope
								.highlight.font-bold Gitlab group
								ul
									li 
										a(href="https://gitlab.fit.cvut.cz/NI-APH") https://gitlab.fit.cvut.cz/NI-APH
							.scope
								.highlight.font-bold Lectures and Labs
								ul
									li Thursday, 16:15, T9:111 / T9:351
			- defaultBgr = 'backgrounds/bgr_projects.jpg'
			+mcontainer()
				h3 Assessment
				.top-5p.left-40p
					img.height-300(src=themePath+'resources/keen.png' alt='decoration')
				.center.top-35p.z-index-100.width-100p
					+frameShard().width-55p
						div.spacing-2xs
							.scope.fragment
								p Semestral project
								ul
									li <span class="highlight-2">70</span> points, <span class="highlight-2">35</span> to pass
									li 3 milestones:
										ul
											li <span class="highlight-2">7.10.</span> - submit description of your project (remote)
											li <span class="highlight-2">4.11. / 11.11.</span> - present your progress
											li <span class="highlight-2">10.1. 2022</span> - submission deadline (remote)
									li All info can be found <a href="https://aphgames.io/docs/niaph">here</a>
							.scope.fragment
								p Exam
								ul
									li 1-on-1 discussion, 3 technical questions
									li <span class="highlight-2">30</span> points, <span class="highlight-2">15</span> to pass
			- defaultBgr = 'backgrounds/hall.jpg'
			+mcontainer()
				h3 Timeline
					.top-40p.left-6p
						img.height-240(src=imgAssets+'timeline.svg')
			+frameInboxMid('Lectures')
				div.center
					table.width-50p.text-left
						tr
							th Week
