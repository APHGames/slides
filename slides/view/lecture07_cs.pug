doctype html
include ./mixins/header.pug
include ./mixins/containers.pug
include ./mixins/containers_aph.pug
include ./mixins/title.pug
include ./mixins/quotes.pug
include ./mixins/summary.pug

- var themePath = '../themes/aph/';
- var globalAssets = '../assets/all/';
- var defaultBgr = 'backgrounds/bgr_arcades2.jpg';

html(lang='cs')
	+header('Fyzika', 'Adam Vesecký', themePath + 'resources/favicon.png', themePath + 'theme_aph.scss')

	.reveal
		.slides
			+titleLectureCs('Fyzika', 'Přednáška 7', globalAssets+'lectures/ic_lecture07.svg')
			+frameInbox('Literatura')
				ul
					li
						a(href="https://www.amazon.com/Game-Physics-Engine-Development-Commercial-Grade/dp/0123819768") Millington, Ian. 2010. Game Physics Engine Development
				div.text-center
					img.height-500(src=globalAssets+'book_physics.jpg' alt='Millington, Ian. Game Physics Engine Development')
			include ./chapters/physics_geometry_cs.pug
			include ./chapters/physics_dynamics_cs.pug
			include ./chapters/physics_steering_cs.pug
			include ./chapters/physics_engines_cs.pug
			include ./chapters/physics_collisions_cs.pug
			+summary_lecture07cs()
			+quote-blizzardcs()

	+footer('Adam Vesecký (FIT ČVUT)', 'Architektura Počítačových Her, Přednáška 7: Fyzika')
	script(src!='../../scripts/reveal-setup.js')
