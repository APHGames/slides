doctype html
include ./mixins/header.pug
include ./mixins/containers.pug
include ./mixins/containers_aph.pug
include ./mixins/title.pug
include ./mixins/quotes.pug
include ./mixins/summary.pug

- var themePath = '../themes/aph/';
- var globalAssets = '../assets/all/';
- var defaultBgr = 'backgrounds/bgr_arcades2.jpg';

html(lang='cs')
	+header('Audio', 'Adam Vesecký', themePath + 'resources/favicon.png', themePath + 'theme_aph.scss')
	.reveal
		.slides
			+titleLectureCs('Hudba a zvuky', 'Přednáška 8', globalAssets+'lectures/ic_lecture06.svg')
			+frameInbox('Literatura')
				ul
					li
						a(href="https://www.amazon.com/Game-Sound-Introduction-History-Practice/dp/026203378X") Collins, Karen. 2008. Game Sound: An Introduction to the History, Theory, and Practice of Video Game Music and Sound Design
				div.text-center
					img.height-500(src=globalAssets+'book_audio.jpg' alt='Collins, Karen. Game Sound: An Introduction to the History, Theory, and Practice of Video Game Music and Sound Design')
			include ./chapters/audio_digital_sound_cs.pug
			include ./chapters/audio_synth_cs.pug
			include ./chapters/audio_music_cs.pug
			include ./chapters/audio_sounds_cs.pug
			include ./chapters/audio_apis_cs.pug
			- var defaultBgr = 'backgrounds/bgr_arcades2.jpg';
			+summary_lecture08cs()
			+quote-savloware()

	+footer('Adam Vesecký (FIT ČVUT)', 'Architektura Počítačových Her, Přednáška 8: Hudba a zvuky')
	script(src!='../../scripts/reveal-setup.js')
