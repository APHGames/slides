- var themePath = '../themes/aph/';
- var globalAssets = '../assets/all/';
- var defaultBgr = 'backgrounds/tree.png';

html(lang='cs')
	+header('Svět her', 'Adam Vesecký', themePath + 'resources/favicon.png', themePath + 'theme_aph.scss')

	.reveal
		.slides
			+titleLectureCs('Svět her', 'Přednáška 1', globalAssets+'lectures/ic_lecture01.svg')
