doctype html
include ./mixins/header.pug
include ./mixins/containers.pug
include ./mixins/containers_aph.pug
include ./mixins/title.pug
include ./mixins/quotes.pug
include ./mixins/summary.pug

- var themePath = '../themes/aph/';
- var globalAssets = '../assets/all/';
- var defaultBgr = 'backgrounds/bgr_arcades2.jpg';

html(lang='cs')
	+header('Grafika', 'Adam Vesecký', themePath + 'resources/favicon.png', themePath + 'theme_aph.scss')

	.reveal
		.slides
			+titleLectureCs('Grafika', 'Přednáška 9', globalAssets+'lectures/ic_lecture09.svg')
			+frameInbox('Literatura')
				ul
					li
						a(href="https://gabrielgambetta.com/computer-graphics-from-scratch/") Gambetta, Gabriel. Computer Graphics From Scratch (Free)
				div.text-center
					img.height-500(src=globalAssets+'book_graphics.jpg' alt='Gambetta, Gabriel. Computer Graphics From Scratch (Free)')
			include ./chapters/graphics_space_cs.pug
			include ./chapters/graphics_animations_cs.pug
			include ./chapters/graphics_processing_cs.pug
			include ./chapters/graphics_concepts_cs.pug
			+summary_lecture09cs()
			+quote-polda()

	+footer('Adam Vesecký (FIT ČVUT)', 'Architektura Počítačových Her, Přednáška 9: Grafika')
	script(src!='../../scripts/reveal-setup.js')
